<div class="flex flex-col justify-center items-center" data-controller="toggle-units">
  <h1 class="text-2xl font-bold mb-4">Conversão de Medidas</h1>
  
  <%= form_with url: converter_to_convert_path, method: :get, local: true, data: { controller: 'toggle-units' } do %>
    <div class="mb-4">
      <%= label_tag :value, 'Valor de entrada', class: 'block text-sm font-medium text-gray-700' %>
      <%= number_field_tag :value, nil, step: 'any', required: true, class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
    </div>
  
    <div class="mb-4">
      <%= label_tag :unit, 'Unidade de entrada', class: 'block text-sm font-medium text-gray-700' %>
      <%= select_tag :unit, options_for_select([['px', 'px'], ['rem', 'rem']], 'px'), data: { toggle_units_target: 'unitInput' }, class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
    </div>
  
    <div class="mb-4">
      <%= label_tag :convert_to, 'Converter para', class: 'block text-sm font-medium text-gray-700' %>
      <%= select_tag :convert_to, options_for_select([['rem', 'rem'], ['px', 'px']], 'rem'), data: { toggle_units_target: 'convertToInput' }, class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
    </div>
  
    <div class="mb-4">
      <%= label_tag :root_font_size, 'Tamanho da fonte raiz (px)', class: 'block text-sm font-medium text-gray-700' %>
      <%= number_field_tag :root_font_size, 16, step: 'any', class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
    </div>
  
    <%= submit_tag 'Converter', class: 'inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
 
    <button type="button" data-action="click->toggle-units#toggle" class="mt-4 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
      Alternar Unidades
    </button>
  <% end %>
  
  <% if @output_value %>
    <h2 class="mt-6 text-xl font-bold">Resultado da Conversão</h2>
    <p class="mt-2 text-base"><strong>Resultado:</strong> <%= @output_with_unit %></p>
  <% end %>
</div>
